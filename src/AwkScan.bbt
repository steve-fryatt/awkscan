DEF PROCopen_options_window(x%,y%,open%)
PROCicon_set_selected(options_window%,6,PROCconfig_read_boolean("Simple wildcards"))
PROCicon_set_selected(options_window%,7,PROCconfig_read_boolean("Select opens blank"))
$FNicon_indirection(options_window%,4)=STR$(PROCconfig_read_integer("Task slot size"))
:
IF open% THEN
 PROCwindow_open_centred_at(options_window%,x%,y%)
 PROCicon_put_caret_at_end(options_window%,4)
ELSE
 PROCicon_redraw(options_window%,4)
 IF FNicon_test_for_caret(options_window%,4) THEN PROCicon_put_caret_at_end(options_window%,4)
ENDIF

ENDPROC
